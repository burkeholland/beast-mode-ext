{
  "name": "beast-mode",
  "displayName": "Beast Mode",
  "description": "The ultimate VS Code configuration for AI coding",
  "version": "0.0.4",
  "publisher": "beast-mode",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beast-mode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "beast-mode.toggleAutoApprove",
        "title": "Beast Mode: Toggle Auto Approve"
      },
      {
        "command": "beast-mode.setMaxRequests",
        "title": "Beast Mode: Set Max Requests"
      },
      {
        "command": "beast-mode.refreshSettings",
        "title": "Beast Mode: Refresh Settings View"
      },
      {
        "command": "beast-mode.forceRefreshConfig",
        "title": "Beast Mode: Force Refresh Remote Config"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beastModeContainer",
          "title": "Beast Mode",
          "icon": "media/icons/lion-head.svg"
        }
      ]
    },
    "views": {
      "beastModeContainer": [
        {
          "type": "webview",
          "id": "beastModeSettings",
          "name": "Settings",
          "icon": "media/icons/lion-head.svg"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Beast Mode",
      "properties": {
        "beastMode.remoteConfigUrl": {
          "type": "string",
          "description": "Optional URL (raw JSON) for remote settings config. Leave blank to use bundled config.json.",
          "default": "https://gist.githubusercontent.com/burkeholland/9fb534608b899badb4fc4ca649056f0e/raw/3725acdbaa8b1716cdcf24d20370cc370ed0b914/config.json"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
