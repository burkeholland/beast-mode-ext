{
  "name": "beast-mode",
  "displayName": "Beast Mode",
  "description": "The ultimate VS Code configuration for AI coding",
  "version": "0.0.1",
  "publisher": "beast-mode",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beast-mode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "beast-mode.toggleAutoApprove",
        "title": "Beast Mode: Toggle Auto Approve"
      },
      {
        "command": "beast-mode.setMaxRequests",
        "title": "Beast Mode: Set Max Requests"
      },
      {
        "command": "beast-mode.refreshSettings",
        "title": "Beast Mode: Refresh Settings View"
      }
    ],
  "viewsContainers": {
      "activitybar": [
        {
          "id": "ultimateAiContainer",
          "title": "Beast Mode",
          "icon": "media/beast-mode.svg"
        }
      ]
    },
    "views": {
      "ultimateAiContainer": [
        {
          "type": "webview",
          "id": "ultimateAiSettings",
          "name": "Settings",
          "icon": "media/beast-mode.svg"
        }
      ]
    },
    "keybindings": [
      {
        "command": "workbench.action.chat.openInEditor",
        "key": "ctrl+alt+u",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
